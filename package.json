{
    "name": "express-wrapper",
    "version": "1.0.0",
    "type": "module",
    "description": "A wrapper reposiroty that includes ready to use docker and testing frameworks",
    "main": "server.js",
    "scripts": {
        "swagger:generate": "node ./swagger/autogen.js",
        "migrate": "npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
        "seed": "npx sequelize-cli db:seed:all",
        "start": "nodemon src/server.js",
        "dev": "TZ=UTC npm run migrate && npm run seed && npm run swagger:generate && npm run start",
        "test": "TZ=UTC NODE_ENV=test mocha  --file ./src/__tests__/setup.js",
        "docker:test": "docker compose down && docker compose build && docker compose run --rm equityiq-backend sh -c 'npm run db:reset:test && npm test'",
        "lint": "eslint .",
        "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
        "db:reset:test": "NODE_ENV=test npm run db:reset"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mayurvir/express-wrapper.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/mayurvir/express-wrapper/issues"
    },
    "homepage": "https://github.com/mayurvir/express-wrapper#readme",
    "dependencies": {
        "@aws-sdk/client-ses": "^3.864.0",
        "@aws-sdk/client-sesv2": "^3.864.0",
        "@ensoai/esop-models": "0.0.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "handlebars": "^4.7.8",
        "jsonwebtoken": "^9.0.2",
        "swagger-autogen": "^2.23.7",
        "swagger-ui-express": "^5.0.1",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "chai": "^5.1.2",
        "chai-http": "^5.1.1",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^15.14.0",
        "mocha": "^11.0.1",
        "nodemon": "^3.1.10",
        "prettier": "^3.4.2",
        "supertest": "^7.0.0"
    }
}
